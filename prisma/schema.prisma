generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Analysis {
  id           String   @id @default(cuid())
  userId       String
  feedbackText String   @db.Text
  title        String?
  result       Json
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([userId])
}

model ApiLog {
  id        String   @id @default(cuid())
  userId    String
  modelUsed String
  tokensIn  Int
  tokensOut Int
  cost      Float
  timestamp DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([timestamp])
  @@index([userId])
}

model App {
  id        String   @id @default(cuid())
  userId    String
  storeUrl  String
  platform  String
  appId     String
  name      String?
  icon      String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviews   Review[]
  clusters  IssueCluster[]

  @@index([appId])
  @@index([userId])
}

model Review {
  id         String   @id @default(cuid())
  appId      String
  storeId    String
  rating     Int
  body       String   @db.Text
  author     String?
  createdAt  DateTime @default(now())
  scrapedAt  DateTime @default(now())
  aiCategory String?
  aiSummary  String?  @db.Text
  aiTopic    String?
  aiUrgency  String?
  app        App      @relation(fields: [appId], references: [id], onDelete: Cascade)
  
  // Phase 3: Embedding and Clustering
  embedding  Unsupported("vector(1536)")? // pgvector embedding (1536 dimensions for OpenAI/text-embedding-ada-002)
  clusterId  String?
  cluster    IssueCluster? @relation(fields: [clusterId], references: [id], onDelete: SetNull)

  @@unique([appId, storeId])
  @@index([aiCategory])
  @@index([aiUrgency])
  @@index([appId])
  @@index([createdAt])
  @@index([clusterId])
}

model IssueCluster {
  id              String   @id @default(cuid())
  appId           String
  app             App      @relation(fields: [appId], references: [id], onDelete: Cascade)
  title           String   // AI-generated canonical title (e.g., "Crash on Android 14 during checkout")
  category        String   // 'Bug Report', 'Feature Request', 'Complaint', 'Praise'
  status          String   @default("open") // 'open', 'seen', 'archived', 'resolved'
  clusterEmbedding Unsupported("vector(1536)")? // Embedding of the cluster title for fast matching
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  reviews         Review[]

  @@index([appId])
  @@index([category])
  @@index([status])
  @@index([createdAt])
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id             String     @id @default(cuid())
  email          String     @unique
  hashedPassword String
  role           String     @default("user")
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  sessions       Session[]
  analyses       Analysis[]
  apiLogs        ApiLog[]
  apps           App[]
}
